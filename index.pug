      }
      .section-header {
        display: flex;
      }
      .section-header > .title {
        font-size: 1.2rem;
      }
      .e-head, .project-head {
        margin-top: 0.6rem;
        font-weight: 700
      }
      .section-header .seperator {
        background: black;
        height: 1px;
        align-self: center;
        margin-left: 0.5rem;
        flex-grow: 1
      }
      .section {
        margin-bottom: 1rem
      }
      #container {
        flex-direction: row;
        display: flex;
        width: 8.5in;
        height: 11in;
        border: 1px solid black;
        margin: 0 auto
      }
      img {
        height: 16px;
        transform: translateY(25%);
        margin-right: 8px;
        -webkit-filter: invert(100%); /* safari 6.0 - 9.0 */
        filter: invert(100%)
