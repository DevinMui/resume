        margin-top: 0.5rem
      }
      #skills li {
        list-style-type: none;
        display: flex;
        justify-content: space-between
      }
      .stars {
        display: none;
        align-items: center;
        justify-content: flex-end;

      }
      .stars img {
        margin: 0;
        height: 8px;
        margin-left: 2px
      }
      #main {
        flex-grow: 1;
        background: #FAFAFA;
        padding: 1.3rem;
        padding-right: 1.5rem;
        display: flex;
        line-height: 1.41rem;
        flex-direction: column;
      }
      .project {
        margin-bottom: 0.8rem
      }
      .e-head, .project-head {
        display: flex;
        flex-direction: row;
        justify-content: space-between
      }
      #card-container {
        display: flex;
        flex-direction: row
      }
      #card-container > :not(:first-child):not(:last-child) {
        margin: 8px;
      }
      .card {
        flex-basis: 100%;
        flex-grow: 1;
        margin-top: 8px;
        margin-bottom: 8px;
        padding: 8px;
        display: flex;
        flex-direction: column;
        border-radius: 8px;
        border: 1px solid rgba(0,0,0,0.2);
      }
      .card-title, .card-when {
        font-size: 0.9rem;
        font-weight: 100
      }
